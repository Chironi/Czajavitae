<script>
function togglePageSlide(id)
{ 
  var a = document.getElementById("currents_span").style.display;
  var b = document.getElementById("about_span").style.display;
  var c = document.getElementById("projects_span").style.display;
  var d = document.getElementById(id).style.display;

  var isVisible = "block";

  if(d == isVisible)
  {
    $('.centerpage').slideToggle('slow');
    return;  
  }

  switch(id)
  {
    case "currents_span":
      document.getElementById("about_span").style.display = "none";
      document.getElementById("projects_span").style.display = "none";
      break;
    case "about_span":
      document.getElementById("projects_span").style.display = "none";
      document.getElementById("currents_span").style.display = "none";
      break;
    case "projects_span":
      document.getElementById("about_span").style.display = "none";
      document.getElementById("currents_span").style.display = "none";
      break;
  }

  if((a == isVisible) || (b == isVisible) || (c == isVisible))
  {
    $(id).hide();
    $('.centerpage').slideUp('slow');
    setTimeout(function(){showAfterDelay(id)}, 500);
  }
  else
  {
    showAfterDelay(id);
  }

  $('.centerpage').slideDown('slow');

  //$('.current_span').fadeIn('fast');
}

function showAfterDelay(id)
{
  document.getElementById(id).style.display = "block";
}

</script>


